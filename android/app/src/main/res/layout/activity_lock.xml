<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D32F2F"
    android:padding="24dp">

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@android:drawable/ic_lock_lock"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/lockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Device Locked"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lockMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockTitle"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Your EMI payment is overdue.\nPlease contact support to unlock your device."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp" />

    <LinearLayout
        android:id="@+id/supportSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockMessage"
        android:layout_marginTop="48dp"
        android:background="#B71C1C"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/supportPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contact Support: 8876655444"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/callSupportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="Call Support"
            android:textColor="#D32F2F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/warningText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="⚠️ This device is locked by the administrator.\nUnauthorized access attempts will be logged."
        android:textColor="#FFCDD2"
        android:textSize="12sp"
        android:lineSpacingExtra="2dp" />

</RelativeLayout>
